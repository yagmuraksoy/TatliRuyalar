<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yamur.tatlryalar">

    <!-- Youtube api kullanabilmek için internet izni -->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    <!-- yeni eklenen sayfaların tanımlanması -->
        <activity android:name=".Masal"  android:label="@string/app_name"  android:parentActivityName=".MainActivity" >
        </activity>

        <activity android:name=".Muzik"  android:label="@string/app_name"  android:parentActivityName=".MainActivity" >
        </activity>

        <activity android:name=".PlayerY"  android:label="@string/app_name"  android:parentActivityName=".MainActivity" >
        </activity>

        <activity android:name=".MPlayer"  android:label="@string/app_name"  android:parentActivityName=".MainActivity" >
        </activity>
    </application>

</manifest>